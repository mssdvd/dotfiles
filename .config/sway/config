set $mode_system System (l)ock, (e)xit, (s)uspend, (Shift+r)eboot, (Shift+s)hutdown
mode "$mode_system" {
    bindsym l exec swaylock -f && sleep 1, mode "default"
    bindsym e exec emacsclient -e '(save-buffers-kill-emacs 1)', exit, mode "default"
    bindsym s exec systemctl suspend, mode "default"
    bindsym Shift+r exec "emacsclient -e '(save-buffers-kill-emacs 1)'; systemctl reboot", mode "default"
    bindsym Shift+s exec "emacsclient -e '(save-buffers-kill-emacs 1)'; systemctl poweroff -i", mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Shift+e mode "$mode_system"

set $mode_screenshot Screenshot copy (w)in, (s)creen, (a)rea, save (Shift+w)in, (Shift+s)creen, (Shift+a)rea, swapp(y)
mode "$mode_screenshot" {
    bindsym w exec grimshot --notify copy win; mode "default"
    bindsym Shift+w exec grimshot --notify save win; mode "default"
    bindsym s exec grimshot --notify copy screen; mode "default"
    bindsym Shift+s exec grimshot --notify save screen; mode "default"
    bindsym a exec grimshot --notify copy area; mode "default"
    bindsym Shift+a exec grimshot --notify save area; mode "default"
    bindsym y exec grim -g "$(slurp)" - | swappy -f -; mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym Print mode "$mode_screenshot"

set $passthrough passthrough mode ($mod+Pause to leave)
mode "$passthrough" {
	bindsym $mod+Pause mode default
}
bindsym $mod+Pause mode "$passthrough"

